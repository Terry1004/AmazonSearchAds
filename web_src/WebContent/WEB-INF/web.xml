<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" id="searchAds" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd ">
	<display-name>SearchAds</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>SearchAds</servlet-name>
		<servlet-class>io.amazon.ads.SearchAdsServer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchAds</servlet-name>
		<url-pattern>/search-ads</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>redisHost</param-name>
		<param-value>localhost</param-value>
	</context-param>
	<context-param>
		<param-name>adsDataPath</param-name>
		<param-value>param-value</param-value>
	</context-param>
	<context-param>
		<param-name>budgetDataPath</param-name>
		<param-value>param-value</param-value>
	</context-param>
	<context-param>
		<param-name>uiTemplatePath</param-name>
		<param-value>/home/huang/projects/AmazonSearchAds/templates/ui.html</param-value>
	</context-param>
	<context-param>
		<param-name>adTemplatePath</param-name>
		<param-value>/home/huang/projects/AmazonSearchAds/templates/ad.html</param-value>
	</context-param>
	<context-param>
		<param-name>dbSourceUrl</param-name>
		<param-value>java:comp/env/jdbc/mysqldb</param-value>
	</context-param>
	<resource-ref>
		<res-ref-name>jdbc/mysqldb</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>